{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "es2023"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src",
    "e2e",
    "eslint.config.ts",
    "playwright.config.ts",
    "vitest.config.ts",
    "tsdown.config.ts"
  ]
}
